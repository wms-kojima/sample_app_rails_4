%p
  %b Name:
  = @project.name

= link_to 'Edit', edit_project_path(@project)
\|
= link_to 'Back', projects_path

= render 'shared/task_form'

- if @feed_items.any?
  .task_table_container
    %table.table.table-bordered.task_table{ id: "project_table" }
      %thead
        %tr
          %th= "内容"
          %th{ colspan: 2 }="ステータス"
          %th
          %th= "予定工数（分）"
          - @project.term.each do |date|
            %th=date
          %th
      - @feed_items.each do |feed_item|
        %tr
          %td= link_to feed_item.content, edit_project_task_path(@project, feed_item)
          %td= status_name(feed_item.status)
          - unless feed_item.done?
            %td= link_to acition_name(feed_item), project_task_change_status_path(@project, feed_item, action_name: acition_name(feed_item)), method: :post, class: "btn btn-info"
          -else
            %td
          %td= link_to "delete", project_task_path(@project, feed_item), method: :delete, |
            data: { confirm: "本当に削除しますか？" },               |
            title: feed_item.content                      |
          %td= feed_item.planed_time
          - @project.term.each do |date|
            %td
          %td= link_to "delete", project_task_path(@project, feed_item), method: :delete, |
            data: { confirm: "本当に削除しますか？" },               |
            title: feed_item.content                      |